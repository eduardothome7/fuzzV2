<%= form_for(event, remote: @is_remote, id:'new_event') do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
    
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_at %>
    <%= f.text_field :start_at, class: 'form-control datetimepicker' %>
  </div>

  <div class="form-group">
    <%= f.label :end_at %>
    <%= f.select :duration, [['2 horas', '2'], ['4 horas', '4'], ['6 horas', '6'], ['8 horas', '8'], ['12 horas', '12']] %>
  </div>

  <div class="form-group">
    <%= f.label :invites %>
    <%= f.text_area :invites, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Confirmar", class: 'btn btn-primary' %>
  </div>

<% end %>
